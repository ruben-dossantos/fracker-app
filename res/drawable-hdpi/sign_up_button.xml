<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#2054B7" />
      <stroke
          android:width="1dp"
          android:color="#2256B8" />
      
    </shape>
  </item>
  
  <item>
    <shape>
      <gradient
          android:startColor="#2256B8"
          android:endColor="#2054B7"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#2054B7" />
      
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>